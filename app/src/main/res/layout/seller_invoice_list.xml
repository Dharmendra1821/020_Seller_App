<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/new_btn_color"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/seller_invoice_number"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@color/new_btn_color">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/new_btn_color"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/seller_invoice_status"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:id="@+id/invoice_id_checkbox"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="#2167261"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/seller_invoice_gstin"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rs 300"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/seller_invoice_amount"/>



        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="3"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Suraj Golap"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:id="@+id/seller_invoice_name"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="22/10/2019"
                    android:textColor="@color/greysilver"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="right"
                    android:id="@+id/seller_invoice_date"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Receipt"
                android:textColor="#FF0000"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:id="@+id/seller_invoice_pdf_link"/>
        </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>