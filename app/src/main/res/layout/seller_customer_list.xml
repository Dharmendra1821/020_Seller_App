<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/enable_credit"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/seller_customer_name"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/seller_customer_mobile"/>
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:id="@+id/seller_customer_email"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/ic_visibility_black_24dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:visibility="gone"
                    android:id="@+id/seller_customer_udhar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"
                    android:layout_marginRight="20dp"
                    android:visibility="gone"
                    android:background="@drawable/ic_add_alert_black_24dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/seller_customer_reminder"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>