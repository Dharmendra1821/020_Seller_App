<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:padding="10dp"
    tools:context="standalone.eduqfix.qfixinfo.com.app.transaction_response.activity.TransactionSuccessActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:elevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Thanks for shopping with us !"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView android:id="@+id/amountPaidTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    tools:text="Amount paid : 2000"
                    android:textColor="#000"
                    android:textStyle="bold"/>

                <androidx.legacy.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gift_icon"
                    android:layout_gravity="center_horizontal"/>

                <androidx.legacy.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="20dp" />

                <Button android:id="@+id/continueButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"/>

                <androidx.legacy.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="10dp" />

                <Button android:id="@+id/exitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exit"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:background="@color/exit_button_color"
                    android:textColor="#fff"/>

            </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
