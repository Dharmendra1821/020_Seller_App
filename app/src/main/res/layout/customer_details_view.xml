<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/customercard_background"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardMaxElevation="4dp">
    <LinearLayout android:id="@+id/customerDetailsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textColor="#000006"/>
        <TextView
            android:id="@+id/customerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:ellipsize="end"

            android:textColor="#000006"/>
        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Number"
            android:textColor="#000006"/>
        <TextView
            android:id="@+id/customerNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Number"
            android:textColor="#000006"/>
        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Id"
            android:textColor="#000006"/>
        <TextView
            android:id="@+id/emailIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="#000006"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>

    <LinearLayout android:id="@+id/noCustomerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/customercard_background"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:cardMaxElevation="4dp">

            <TextView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Customer not found"
                android:textColor="#000006"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>