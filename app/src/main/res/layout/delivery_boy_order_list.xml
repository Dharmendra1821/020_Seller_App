<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/delivery_boy_list_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#83826832"
                android:textColor="@color/new_btn_color"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/delivery_boy_list_order"/>



        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Suraj Golap"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/delivery_boy_list_name"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9833173183"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/delivery_boy_list_number"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suraj Golap jkgugjhslkjkjklsdjkljd"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left"
                android:id="@+id/delivery_boy_list_address"/>

        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:weightSum="3"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="22/10/2019"
                    android:textColor="@color/greysilver"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:id="@+id/delivery_boy_list_date"/>


                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/filter_delivery_boy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#333"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="14dp"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>